@model IEnumerable<KetQuaVm>

@{
    var stt = 1;
}

<div class="float-right">
    <button id="btnXemDanhSachChuaIn" class="btn btn-primary">Xem danh sách</button>
</div>
<table id="tblDanhSachCoKetQuaChuaIn" class="table display table-striped table-bordered" style="width:100%; font-size: 13px; color: black">
    <thead>
        <tr class="text-center">
            <th>STT</th>
            <th>Mã Y tế</th>
            <th>Họ tên</th>
            <th>Năm sinh</th>
            <th>Giới tính</th>
            <th>Điện thoại</th>
            <th>Tên chỉ định</th>
            <th>Thời gian lấy mẫu</th>
            <th>Thời gian kết quả</th>
            <th>Đối tượng</th>
            <th>Ghi chú</th>
            <th>Kết quả</th>
            <th style="width: 10%">#</th>
            @*<th style="width: 5%">Id</th>*@
            @*<th style="width: 10%">Barcode</th>*@

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.ThoiGianLayMau))
        {
        <tr>
            <td>@(stt++)</td>
            <td style="color: blue; font-weight: bold">@item.MaYTe</td>
            <td style="color: blue; font-weight: bold">@item.TenBenhNhan</td>
            <td style="color: blue; font-weight: bold">@item.NamSinh</td>
            <td>
                @if (item.GioiTinh == "F")
                {
                    <p>Nữ</p>
                }
                else
                {
                    <p>Nam</p>
                }
            </td>
            <td>@item.SoDienThoai</td>
            <td>@item.DichVu</td>
            <td>@item.ThoiGianLayMau</td>
            <td>@item.ThoiGianKetQua</td>
            <td>
                @if (item.ThanhToan == 0)
                {
                    <span class="btn btn-info">Theo Yêu cầu</span>
                }
            </td>
            <td>
                @if (item.GhiChu == "null" || item.GhiChu is null)
                {
                    <span></span>
                }
                else if (item.GhiChu.Contains("2"))
                {
                    <span>Cổng số 2</span>
                }
                else if (item.GhiChu.Contains("3"))
                {
                    <span>Cổng số 3</span>
                }
                else if (item.GhiChu.Contains("4"))
                {
                    <span>Cổng số 4</span>
                }
                else if (item.GhiChu.Contains("5"))
                {
                    <span>Cổng số 5</span>
                }
                else if (item.GhiChu.ToLower().Contains("ck"))
                {
                    <span>Hợp đồng công ty</span>
                }
                else if (item.GhiChu.ToLower().Contains("nv"))
                {
                    <span>Nhân viên</span>
                }
                else
                {
                    <span></span>
                }
            </td>
            <td>
                @if (item.KetQua == false)
                {
                    <span class="btn btn-primary">
                        Âm tính
                    </span>
                }
                else
                {
                    <span class="btn btn-danger">
                        Dương tính
                    </span>
                }


            </td>
            <td>
                @if (item.GhiChu != null)
                {
                    @if (item.ThanhToan == 0 || item.GhiChu.ToLower() == "ck")
                    {
                        <i class="fas fa-upload"
                           style="font-size: 24px; color: green"
                           title="Upload kết quả"
                           onclick="UploadKetQua(@item.Id, '@item.ThoiGianLayMau')">
                        </i>
                        <span style="font-size: 24px; margin-right: 10px; margin-left: 10px; font-weight:bold; color: black">|</span>
                        <i class="fas fa-print"
                           title="In kết quả"
                           style="font-size: 24px; color: blue"
                           onclick="InKetQua(@item.Id, '@item.ThoiGianLayMau')">
                        </i>

                    }
                    else
                    {
                        <i class="fas fa-upload"
                           style="font-size: 24px; color: green"
                           title="Upload kết quả"
                           onclick="UploadKetQua(@item.Id,'@item.ThoiGianLayMau')">
                        </i>
                    }
                }
                else
                {
                    @if (item.ThanhToan == 0)
                    {
                        <i class="fas fa-upload"
                           style="font-size: 24px; color: green"
                           title="Upload kết quả"
                           onclick="UploadKetQua(@item.Id, '@item.ThoiGianLayMau')">
                        </i>
                        <span style="font-size: 24px; margin-right: 10px; margin-left: 10px; font-weight:bold; color: black">|</span>
                        <i class="fas fa-print"
                           title="In kết quả"
                           style="font-size: 24px; color: blue"
                           onclick="InKetQua(@item.Id, '@item.ThoiGianLayMau')">
                        </i>

                    }
                    else
                    {
                        <i class="fas fa-upload"
                           style="font-size: 24px; color: green"
                           title="Upload kết quả"
                           onclick="UploadKetQua(@item.Id,'@item.ThoiGianLayMau')">
                        </i>
                    }
                }


            </td>

            @*<td>@item.Id</td>*@
        </tr>
        }
    </tbody>
</table>


